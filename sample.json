{
    "name": "My Project",
    "description": "Awesome project.",
    "recipes": [
        {
            "rid": "cakephp2/core"
        },
        {
            "rid": "cakephp2/cms",
            "config": {
                "appName": "Sample CMS"
            }
        }
    ],
    "models": [
        {
            "name": "Product",
            "table": "products",
            "fields": [
                {
                    "name": "id",
                    "primaryKey": true,
                    "type": "integer"
                },
                {
                    "name": "title",
                    "type": "string",
                    "required": true,
                    "label": "Title"
                },
                {
                    "name": "description",
                    "type": "string",
                    "required": false,
                    "label": "Product Description",
                    "control": "textarea"
                },
                {
                    "name": "picture",
                    "type": "picture",
                    "label": "Picture"
                }
            ],
            "relations": [
                {
                    "alias": "Category",
                    "model": "Category",
                    "type": "belongsTo",
                    "foreignKey": "category_id"
                }
            ]
        },
        {
            "name": "Category",
            "table": "categories",
            "fields": [
                {
                    "name": "id",
                    "primaryKey": true,
                    "type": "integer"
                },
                {
                    "name": "title",
                    "type": "string",
                    "required": true,
                    "label": "Title"
                }
            ]
        }
    ]
}